# ===============================================
# DocuScan Advanced Document Processing System
# Environment Configuration Template
# ===============================================
# 
# SETUP INSTRUCTIONS:
# 1. Copy this file to .env: cp .env.example .env
# 2. Configure your API keys and settings below
# 3. Keep your .env file private and never commit it to version control
#

# =====================================
# Application Settings
# =====================================
APP_NAME=DocuScan
LOG_LEVEL=INFO
UPLOAD_MAX_SIZE_MB=10

# =====================================
# OpenAI Configuration (REQUIRED for OCR)
# =====================================
# Get your API key from: https://platform.openai.com/api-keys
# OCR functionality requires this to be set
OPENAI_API_KEY=sk-your_openai_api_key_here_replace_this

# OpenAI Model Configuration
OPENAI_VISION_MODEL=gpt-4o
OPENAI_TEXT_MODEL=gpt-4o-mini
OCR_MAX_TOKENS=2000

# =====================================
# Classification System Settings
# =====================================
# ML fallback confidence threshold (0.0-1.0)
# When heuristic confidence is below this, ML fallback is used
ML_CONFIDENCE_THRESHOLD=0.70

# =====================================
# OCR Processing Settings  
# =====================================
# Enable/disable specific OCR features
ENABLE_TABLE_EXTRACTION=true
ENABLE_TOTALS_VALIDATION=true
ENABLE_BOUNDING_BOX_VISUALIZATION=true

# OCR processing limits
MAX_PDF_PAGES=10
MAX_IMAGE_SIZE_MB=5

# =====================================
# Visualization Settings
# =====================================
# Default visualization options
SHOW_CONFIDENCE_SCORES=true
SHOW_BOUNDING_BOXES=true
AUTO_EXPAND_RESULTS=true

# =====================================
# Performance & Caching
# =====================================
# Cache settings for better performance
ENABLE_RESULT_CACHING=true
CACHE_EXPIRY_HOURS=24

# =====================================
# Future API Integrations (Optional)
# =====================================
# Uncomment and configure as needed for future enhancements

# Google Cloud Vision API
# GOOGLE_API_KEY=your_google_api_key_here
# GOOGLE_PROJECT_ID=your_project_id

# Azure Form Recognizer
# AZURE_FORM_RECOGNIZER_ENDPOINT=your_endpoint
# AZURE_FORM_RECOGNIZER_KEY=your_key

# AWS Textract
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1

# =====================================
# Security Settings (Optional)
# =====================================
# JWT secret for future authentication features
# JWT_SECRET=your_random_secret_key_here

# Rate limiting (requests per minute)
# RATE_LIMIT_RPM=60

# =====================================
# Development Settings
# =====================================
# Set to true for development mode with extra logging
DEBUG_MODE=false

# Enable detailed OCR debugging
DEBUG_OCR=false

# Save processed images for debugging
SAVE_DEBUG_IMAGES=false
